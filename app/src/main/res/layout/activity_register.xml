<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:id="@+id/registerlayout"
    android:background="@drawable/backgroundlogin"
    tools:context="com.example.safaanabil.hichhecker.Register">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin = "10dp"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:id="@+id/nametext"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/white"
            />
        <EditText
            android:layout_below="@+id/nametext"
            android:id="@+id/name"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:padding="15dp"
            android:background="@drawable/roundededit"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_below="@id/name"
            android:id="@+id/textemail"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/white"
            />
        <EditText
            android:layout_below="@+id/textemail"
            android:id="@+id/email"
            android:padding="10dp"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="150dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:background="@drawable/roundededit"
            />
        <TextView
            android:layout_below="@id/email"
            android:id="@+id/passtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/white"
            />
        <EditText
            android:layout_below="@id/passtext"
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="20dp"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/password"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:padding="15dp"
            android:background="@drawable/roundededit"
            />

        <TextView
            android:layout_below="@id/password"
            android:id="@+id/confpasstext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/white"
            />
        <EditText
            android:layout_below="@id/confpasstext"
            android:id="@+id/confirmpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="20dp"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/password"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:padding="15dp"
            android:background="@drawable/roundededit"
            />
        <Button
            android:layout_below="@id/confirmpass"
            android:id="@+id/register"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.3"
            android:onClick="add"
            android:text="Register"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@drawable/roundedbutton"
            />



    </RelativeLayout>

      </RelativeLayout>





